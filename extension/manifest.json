{
    "manifest_version": 3,
    "name": "User Agent Switcher Pro",
    "version": "1.0.2",
    "description": "Advanced User-Agent switcher with per-site JavaScript and Cookie controls.",
    "permissions": [
        "declarativeNetRequest",
        "storage",
        "tabs",
        "contentSettings"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}